#!/usr/bin/env node

const path = require("path")
const sass = require("node-sass")
const file = path.resolve(__dirname, "../source/styles/website.sass")
const outfile = path.resolve(__dirname, "../source/styles/website.css")

console.log(`Rendering ${file}`)
console.log(`Placing output styles in ${outfile}`)

sass.renderSync({
  file,
  outfile,
  indentedSyntax: true
})

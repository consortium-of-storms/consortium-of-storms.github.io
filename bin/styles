#!/usr/bin/env node

const fs     = require("fs")
const path   = require("path")
const sass   = require("node-sass")
const file   = path.resolve(__dirname, "../source/styles/website.sass")
const output = path.resolve(__dirname, "../source/styles/website.css")

console.log(`Rendering ${file}`)

const result = sass.renderSync({ file, indentedSyntax: true })

console.log(`Placing output styles in ${output}`)

fs.writeFileSync(output, result.css);
